<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_halal_certificates" model="ir.ui.view">
        <field name="name">stock.picking.form.halal.certificates.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group name="certificates">
                    <field name="restaurant_partner_id" />
                    <field name="restaurant_questionnaire_id"/>
                </group>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
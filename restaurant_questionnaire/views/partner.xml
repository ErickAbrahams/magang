<?xml version="1.0"?>
<odoo>
    <record id="restaurant_res_partner_view_questionnaire" model="ir.ui.view">
        <field name="name">restaurant.res.partner.view.questionnaire</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="questionnaire_page" string="Halal Traceability">
                    <group>
                        <field name='is_restaurant'/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
